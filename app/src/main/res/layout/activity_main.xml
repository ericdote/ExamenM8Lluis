<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alumnedam.examen.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:id="@+id/test"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:text="Introdueix el nom: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Ex: Lluis"
                android:ems="10"
                android:id="@+id/etNom" />



        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:text="Escogeix el tema: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView" />
        <RadioGroup
            android:checkedButton="@+id/rbSuma"
            android:id="@+id/rgTema">
            <RadioButton
                android:text="Suma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbSuma" />
            <RadioButton
                android:text="Resta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbResta" />
            <RadioButton
                android:text="Multiplicacio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbMultiplicacio" />
            <RadioButton
                android:text="Divisio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rbDivisio" />
        </RadioGroup>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:text="Escogeix el tema: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" />

        <RadioGroup
            android:checkedButton="@+id/rb5"
            android:id="@+id/rgDif">
            <RadioButton
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb5" />
            <RadioButton
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb10" />
            <RadioButton
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb15" />
            <RadioButton
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rb20" />
        </RadioGroup>
    </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:text="ComenÃ§a el test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnComenca" />
            </TableRow>
    </TableLayout>
</LinearLayout>
